{
  "name": "tcc-api-conversion",
  "version": "0.0.0",
  "author": "Diego Aquino <diegocruzdeaquino@gmail.com>",
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "dotenv -c development -- tsup --onSuccess 'pnpm build:swagger && node dist/index.js' --watch",
    "build": "dotenv -c production -- tsup --onSuccess 'pnpm build:swagger'",
    "build:swagger": "mkdir -p ./public && cp -r ./node_modules/@fastify/swagger-ui/static ./public",
    "start": "dotenv -c production -- node dist/index.js",
    "lint": "eslint --ext 'ts' --cache --no-error-on-unmatched-pattern --max-warnings 0 --fix",
    "style": "prettier --log-level warn --ignore-unknown --no-error-on-unmatched-pattern --cache",
    "style:check": "pnpm style --check",
    "style:format": "pnpm style --write",
    "types:check": "tsc --noEmit",
    "typegen": "dotenv -c development -- pnpm typegen:conversion && pnpm lint 'src/**/*generated.ts'",
    "typegen:conversion": "zimic typegen openapi ./docs/spec/openapi.yaml --output src/types/generated.ts --service-name Conversion",
    "test": "dotenv -c test -- dotenv -c development -- vitest",
    "db": "prisma",
    "db:dev": "dotenv -c development -- prisma",
    "pre:commit": "lint-staged",
    "pre:push": "concurrently --names style,types,lint 'pnpm style:check .' 'pnpm types:check' 'pnpm lint .'",
    "deps:up": "docker compose up conversion-database -d --wait",
    "prepare": "husky || echo 'Could not install git hooks with husky.'",
    "postinstall": "pnpm db:dev generate"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.0.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.17.0",
    "fastify": "^4.28.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prettier-plugin-sh": "^0.14.0",
    "prettier-plugin-sql": "^0.18.1",
    "prisma": "^5.17.0",
    "tsup": "^8.2.2",
    "typescript": "^5.5.4",
    "zimic": "^0.8.2"
  }
}
